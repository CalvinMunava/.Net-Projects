
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Iservz</title>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,600" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/dist/css/style.css">
    <script src="https://unpkg.com/animejs@3.0.1/lib/anime.min.js"></script>
    <script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

</head>
<body class="is-boxed has-animations">
    <nav class="navbar navbar-expand-lg " style="background-color:#1D2026">
        <button class="button button-dark button-sm"  style=" border-radius:80px;margin-left:70%"  onclick="window.location.href='@Url.Action("Login","Account")'">
        
        <i style="color:white" class="fa fa-user"> Login </i>
        
        </button>
    </nav>
    <div class="body-wrap">
        <header class="site-header">
            <div class="container">
                <div class="site-header-inner">
                    <div class="brand header-brand">
                        <h1 class="m-0">
                            <a href="#">
                                <img class="header-logo-image" src="~/Content/Pictures/Iservlogo-removebg-preview.png" alt="Logo">
                            </a>
                        </h1>
                    </div>
                </div>
            </div>
        </header>

        <main>
            <section class="hero">
                <div class="container">
                    <div class="hero-inner">
                        <div class="hero-copy">
                            <h1 class="hero-title mt-0">Welcome to Iservz</h1>
                            <p class="hero-paragraph">
                                iServz helps breach the gap between skilled unemployed workers and potential consumers.
                                This is achieved by matching service providers to the skills required by you
                                - relative to your location. Our focal area lies in creating employment for the more
                                susceptible members of the South African economy.
                            </p>
                            <div class="hero-cta">
                            <a style="border-radius:30px;border-radius:30px" class="button button-primary" onclick="window.location.href='@Url.Action("Create","Service_Provider_Application")'">Service Provider Application</a>
                            </div>
                        </div>
                        <div class="hero-figure anime-element">
                            <svg class="placeholder" width="528" height="396" viewBox="0 0 528 396">
                                <rect width="528" height="396" style="fill:transparent;" />
                            </svg>
                            <div class="hero-figure-box hero-figure-box-01" data-rotation="45deg"></div>
                            <div class="hero-figure-box hero-figure-box-02" data-rotation="-45deg"></div>
                            <div class="hero-figure-box hero-figure-box-03" data-rotation="0deg"></div>
                            <div class="hero-figure-box hero-figure-box-04" data-rotation="-135deg"></div>
                            <div class="hero-figure-box hero-figure-box-05"></div>
                            <div class="hero-figure-box hero-figure-box-06"></div>
                            <div class="hero-figure-box hero-figure-box-07"></div>
                            <div class="hero-figure-box hero-figure-box-08" data-rotation="-22deg"></div>
                            <div class="hero-figure-box hero-figure-box-09" data-rotation="-52deg"></div>
                            <div class="hero-figure-box hero-figure-box-10" data-rotation="-50deg"></div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="features section">
                <div class="container">
                    <div class="features-inner section-inner has-bottom-divider">
                        <div class="features-wrap">
                            <div class="feature text-center is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img src="~/Content/Site/pic01.jpg"  style="border-radius:180px" alt="Feature 01">
                                    </div>
                                    <h4 class="feature-title mt-24">Plumbing Services</h4>
                                    <p class="text-sm mb-0">When looking for assistance with the installation or maintenance of plumbing systems.</p>
                                </div>
                                <button class="button button-dark" style="border-radius:60px"  onclick="window.location.href='@Url.Action("Plumbing","Home")'"> View More</button>
                            </div>
                            <div class="feature text-center is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img src="~/Content/Site/pic03.jpg" style="border-radius:100px" alt="Feature 02">
                                    </div>
                                    <h4 class="feature-title mt-24">Electrical Services</h4>
                                    <p class="text-sm mb-0">Looking for help with installing electrical wiring or any other electrical component?</p>
                                </div>
                                <button class="button button-dark" style="border-radius:60px" onclick="window.location.href='@Url.Action("Electrical","Home")'"> View More</button>

                            </div>
                            <div class="feature text-center is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img src="~/Content/Site/pic02.jpg" style="border-radius:100px" alt="Feature 03">
                                    </div>
                                    <h4 class="feature-title mt-24">Gardening</h4>
                                    <p class="text-sm mb-0">Need help cultivating or simply maintaining your garden?</p>
                                </div>
                                <button class="button button-dark" style="border-radius:60px" onclick="window.location.href='@Url.Action("Garden","Home")'"> View More</button>
                            </div>
                            <div class="feature text-center is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img src="~/Content/Site/Paint.jpg" style="border-radius:100px" alt="Feature 04">
                                    </div>
                                    <h4 class="feature-title mt-24">Painting Services</h4>
                                    <p class="text-sm mb-0">When you need help with painting services.</p>
                                </div>
                                <button class="button button-dark" style="border-radius:60px" onclick="window.location.href='@Url.Action("Painting","Home")'"> View More</button>
                            </div>
                            <div class="feature text-center is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img src="~/Content/Site/pic05.jpg" style="border-radius:100px" alt="Feature 05">
                                    </div>
                                    <h4 class="feature-title mt-24">Cleaning Services</h4>
                                    <p class="text-sm mb-0">Whether it be corporate or residential areas, we’ve got you covered!</p>
                                </div>
                                <button class="button button-dark" style="border-radius:60px" onclick="window.location.href='@Url.Action("Cleaning","Home")'"> View More</button>
                            </div>
                            <div class="feature text-center is-revealing">
                                <div class="feature-inner">
                                    <div class="feature-icon">
                                        <img src="~/Content/Site/pic06.jpg" style="border-radius:100px" alt="Feature 06">
                                    </div>
                                    <h4 class="feature-title mt-24">General Services</h4>
                                    <p class="text-sm mb-0">When looking for help with any general activity such as mounting a TV or packing.</p>
                                </div>
                                <button class="button button-dark" style="border-radius:60px" onclick="window.location.href='@Url.Action("General","Home")'"> View More</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

       

            <section class="cta section">
                <div class="container">
                    <div class="cta-inner section-inner" style="border-radius:100px">
                        <h3 class="section-title mt-0">Join Now and Become Part of The Iservz Family</h3>
                        <div class="cta-cta">
                            <a style="border-radius:30px" class="button button-primary" onclick="window.location.href='@Url.Action("Register","Account")'">Register Now</a>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <footer class="site-footer">
            <div class="container">
                <div class="site-footer-inner">
                    <div class="brand footer-brand">
                        <a href="#">
                        </a>
                    </div>
                
                    <div class="footer-copyright">&copy; 2020 By Iserv</div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Content/dist/js/main.min.js"></script>
</body>
</html>





