@using Microsoft.AspNet.Identity
@model IEnumerable<Iserv.Models.Consumer>

@{
    ViewBag.Title = "HomeCustomer";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<h2 class="text-info"> Welcome Back </h2>

<div class="container" style="background-color:black;border-radius:20px;width:300px;float:left;margin-left:-40%">
    <p class="text-info btn" style="border-bottom-right-radius: 20px; border-top-right-radius: 20px; margin-left: -15px"> Logged In - @ViewBag.Time  </p>

    <div class="form-horizontal" style="margin-left:20%;">
        <div class="mb-4" style="margin-left:5%">
            <br />
            @if (ViewBag.ImagePath == null)
            {
                <img src="~/Content/Pictures/placeholder-avatar.jpg" class="img-rounded" style="width:60%;height:60%; border-radius:30px">
            }
            else
            {
                <img src="@Url.Content(ViewBag.ImagePath)" class="img-rounded" style="width:60%;height:60%; border-radius:30px">
            }
        </div>
        <div style="margin-left:30px">
            <span style="color:white">@ViewBag.UserName</span>
        </div>
        <br />
        <br />
    </div>
</div>

<div class="card " style="width:100%;height:100%;border:1px solid;border-radius:10px;padding:10px;background-color:rgba(0,0,0,1);margin-left:5px;margin-top:10px">
    <div class="btn-group-lg">
        <button class="btn btn-info btn-lg" onclick="window.location.href='@Url.Action("Index","Messages")'"> Messages</button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("IndexConsumer","ServiceProviders")'"> View Service Providers</button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("IndexCustomer","ServiceQuotes")'"> Service Quotes </button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("IndexConsumer","ServiceRequests")'"> Service Requests </button>
    </div>
</div>