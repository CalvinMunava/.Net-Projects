@using Microsoft.AspNet.Identity
@model IEnumerable<Iserv.Models.AspNetUser>
@{
    ViewBag.Title = "HomeAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card " style="width:auto;height:100%;border:1px solid;border-radius:10px;padding:10px;background-color:#13151a;border-radius:20px;margin-left:-4%">
    <div class="btn-group-lg">
        <button class="btn btn-info btn-lg" onclick="window.location.href='@Url.Action("Index","Messages")'"> Messages</button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("Index","ServiceProviders")'">Manage Providers</button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("Index","Admins")'"> Manage Admins </button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("Index","Categories")'"> Categories </button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("Index","Services")'"> Services </button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("Index","Provinces")'"> Provinces </button>
        <button class="btn btn-dark btn-lg" onclick="window.location.href='@Url.Action("Index","Cities")'"> Cities </button>

    </div>
</div>

<div class="container" style="background-color:#13151a;border-radius:20px;width:300px;float:left;margin-left:-40%">
    <h3 style="color:white;margin-left:80px">@DateTime.Today.Date.DayOfWeek</h3>
    <p class="text-info btn" style="border-bottom-right-radius: 20px; border-top-right-radius: 20px; margin-left: -15px"> Logged In - @ViewBag.Time  </p>

    <div class="form-horizontal" style="margin-left:20%;">
        <div class="mb-4" style="margin-left:5%">
            <br />
            @if (ViewBag.ImagePath == null)
            {
                <img src="~/Content/Pictures/admin.jpg" class="img-rounded" style="width:60%;height:60%; border-radius:30px">
            }
            else
            {
                <img src="@Url.Content(ViewBag.ImagePath)" class="img-rounded" style="width:60%;height:60%; border-radius:30px">
            }
        </div>
        <div style="margin-left:30px">
            <span style="color:white">@ViewBag.UserName</span>
        </div>
        <br />
        <br />
    </div>
</div>
