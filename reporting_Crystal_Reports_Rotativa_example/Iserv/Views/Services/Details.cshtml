@model Iserv.Models.Service

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="color:white">Service</h2>

<div class="row" style="height:100%;">


    <div class="card " style="width:320px;height:auto;border:1px solid;border-radius:10px;padding:10px;background-color:rgba(0,0,0,0.88);margin-left:5px;margin-top:10px">
        <div class="card-body" >
            <h4 class="card-title" style="color:white"> Service : @Model.Name    </h4>
            <p class="card-text" style="color:white"><strong> Description : @Model.Description</strong></p>
            <p class="card-text" style="color:white"><strong> Category : @Model.Category.Name</strong></p>

            <div class="btn-group">
                <button class="btn btn-info btn-sm" type="submit" onclick="window.location.href='@Url.Action("Edit", "Services", new { id = Model.ServiceID })'">Modify</button>
                <button class="btn btn-dark btn-sm" type="submit" onclick="window.location.href='@Url.Action("Index", "Services")'">Back</button>
            </div>

        </div>
        <br />
    </div>

</div>