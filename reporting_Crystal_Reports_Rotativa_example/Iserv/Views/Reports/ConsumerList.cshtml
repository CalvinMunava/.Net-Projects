@model IEnumerable<Iserv.Models.Consumer>

@{
    ViewBag.Title = "ConsumerList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<p>
    <button class="btn btn-outline-primary" onclick="printContent('ConsRP');">Print</button>
</p>

<div id="ConsRP">
    <h2>Consumers On Board</h2>
    <div>
        <canvas id="barChart" width="300" height="100"></canvas>

        <script>
            var c = document.getElementById("barChart");
            var ctx = c.getContext("2d");
            var tData = $.getValues("/Reports/ConsBarChartData");
            var myBarChart = new Chart(ctx, {
                type: 'bar',
                data: tData
            });
        </script>
    </div>


    <p>
        @*@Html.ActionLink("Download report", "PrintConsumers")*@

    </p>
    <table class="table">

        @foreach(var item1 in Model.GroupBy(p => p.Gender.Name))
            {

        
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cell_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.StreetName)
            </th>
        </tr>

            foreach (var item in item1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cell_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.StreetName)
                </td>

            </tr>
        }
        }
    </table>
</div>

