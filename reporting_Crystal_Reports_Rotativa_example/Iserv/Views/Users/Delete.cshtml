@model Iserv.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Delete User</h2>

<h3>Are you sure you want to delete this User?</h3>
<hr />
<div class="row" style="height:100%;">

    <div class="card " style="width:320px;height:250px;border:1px solid;border-radius:10px;padding:10px;background-color:rgba(0,0,0,0.88);margin-left:5px;margin-top:10px">
        <div class="card-body" style="height:100px">
            <h4 class="card-title" style="color:white"> Username : @Model.UserName   </h4>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <button class="btn btn-danger btn-sm" type="submit">Remove</button>

                </div>
            }

        </div>
        <br />
    </div>

</div>
