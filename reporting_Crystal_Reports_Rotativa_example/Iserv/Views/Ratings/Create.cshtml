@model Iserv.Models.Rating

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin-left:20%">Rate</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="jumbotron" style="background-color:rgba(0,0,0,0.85);border-radius:20px;width:500px;margin-left:27%">
    <hr />

    <div class="form-horizontal" style="margin-left:20%;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label style="color:white" class="control-label">Enter Rating</label>
            <div class="col-md-10"> 
                @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:20px" } })
                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="color:white" class="control-label">Comment</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:20px" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rate" class="btn" style="border-radius:20px;background-color:cornflowerblue;color:white" />
            </div>
        </div>
    </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
