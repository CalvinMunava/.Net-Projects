@model IEnumerable<Iserv.Models.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="color:white">Current System Admins</h2>

<button class="btn btn-dark" style="border-radius:20px" onclick="window.location.href='@Url.Action("Create","Admins")'">
    Add New Admin
</button>
<br />
<br />

<h3 style="color:white">Activate Accounts</h3>
<table class="table  table-dark" style="border-radius:20px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            ID Number
        </th>
        <th>
            Cell Number
        </th>
    </tr>

    @foreach (var item in Model.Where(x => x.User.Activity == "Enabled"))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cell_Number)
            </td>

        </tr>
    }
</table>


<h3  style="color:white">Deactive Accounts</h3>
<table class="table  table-dark" style="border-radius:20px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            ID Number
        </th>
        <th>
            Cell Number
        </th>

    </tr>

    @foreach (var item in Model.Where(x => x.User.Activity == "Disabled"))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cell_Number)
            </td>
        </tr>
    }
</table>




