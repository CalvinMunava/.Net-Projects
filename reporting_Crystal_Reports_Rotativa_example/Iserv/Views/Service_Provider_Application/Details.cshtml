@model Iserv.Models.Service_Provider_Application

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
body {font-family: Arial, Helvetica, sans-serif;}

#myImg {
  border-radius: 5px;
  cursor: pointer;
  transition: 0.3s;
}

#myImg:hover {opacity: 0.7;}

/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.9); /* Black w/ opacity */
}

/* Modal Content (image) */
.modal-content {
  margin: auto;
  display: block;
  width: 80%;
  max-width: 700px;
}

/* Caption of Modal Image */
#caption {
  margin: auto;
  display: block;
  width: 80%;
  max-width: 700px;
  text-align: center;
  color: #ccc;
  padding: 10px 0;
  height: 150px;
}

/* Add Animation */
.modal-content, #caption {
  -webkit-animation-name: zoom;
  -webkit-animation-duration: 0.6s;
  animation-name: zoom;
  animation-duration: 0.6s;
}



/* The Close Button */
.close {
  position: absolute;
  top: 15px;
  right: 35px;
  color: #f1f1f1;
  font-size: 40px;
  font-weight: bold;
  transition: 0.3s;
}

.close:hover,
.close:focus {
  color: #bbb;
  text-decoration: none;
  cursor: pointer;
}


}
    </style>
</head>
<body>
    <h4 style="color:white"> Application Number : <strong style="color:cornflowerblue"> @Model.SPA_ID  </strong> </h4>
    <hr />

    <div class="row" style="height:100%">
        <div class="card " style="width:320px;height:auto;border:1px solid;border-radius:10px;padding:10px;background-color:rgba(0,0,0,0.88);margin-left:5px;margin-top:10px">
            <img class="card-img-top" id="myImg" src="@Url.Content(Model.ldimage)" style="width:60%;height:40%">

            <div class="card-body" style="height:auto">
                <h4 class="card-title" style="color:darkgrey"> Name : <strong style="color:white"> @Model.Name </strong> <strong style="color:white"> @Model.Surname </strong> </h4>
                <p class="card-text" style="color:darkgrey"> Business Name : <strong style="color:white"> @Model.BusinessName</strong></p>
                <p class="card-text"> <strong style="color:white"> @Model.Province.Name </strong> -  <strong style="color:white"> @Model.City.Name</strong></p>
                <p class="card-text" style="color:darkgrey"> VAT Number : <strong style="color:white"> @Model.VatNumber</strong></p>
                <p class="card-text" style="color:darkgrey"> Gender : <strong style="color:white"> @Model.Gender.Name</strong></p>
                <div class="btn-group">
                    <button class="btn btn-info btn-sm" type="submit" onclick="window.location.href='@Url.Action("RequestMeetingAsync", "Service_Provider_Application", new { id = Model.SPA_ID })'">
                        Request Meeting
                    </button>
                    <button class="btn btn-dark btn-sm" type="submit" onclick="window.location.href='@Url.Action("Index", "Service_Provider_Application")'">
                        Return
                    </button>
                </div>
            </div>
            <br />
        </div>
        }
    </div>
    <div id="myModal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="img01">
        <div id="caption"></div>
    </div>
</body>
<script>

    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the image and insert it inside the modal - use its "alt" text as a caption
    var img = document.getElementById("myImg");
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("caption");
    img.onclick = function () {
        modal.style.display = "block";
        modalImg.src = this.src;
        captionText.innerHTML = this.alt;
    }

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }
</script>

</html>
