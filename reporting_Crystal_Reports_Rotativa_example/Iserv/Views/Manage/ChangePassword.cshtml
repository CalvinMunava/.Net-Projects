@model Iserv.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";

}


<h2 style="margin-left:20%; color:white;">Change Password</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="jumbotron" style="background-color:rgba(0,0,0,1);border-radius:20px;width:500px;margin-left:27%">
        <hr />

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-horizontal" >
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label style="color:white" class="control-label">Enter Current Password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @style=" border-radius:20px;color:deepskyblue"  } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label style="color:white" class="control-label">Enter New Password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" , @style=" border-radius:20px;color:deepskyblue" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label style="color:white" class="control-label">Confirm New Password</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @style=" border-radius:20px;color:deepskyblue"  } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Change Password" class="btn" style="border-radius:20px;background-color:darkturquoise;color:white" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}