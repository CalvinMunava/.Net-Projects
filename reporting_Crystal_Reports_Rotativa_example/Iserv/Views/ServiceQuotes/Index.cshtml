@model IEnumerable<Iserv.Models.ServiceQuote>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sent Quotes</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentMethod.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ServiceQuoteID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ServiceQuoteID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ServiceQuoteID })
        </td>
    </tr>
}

</table>
