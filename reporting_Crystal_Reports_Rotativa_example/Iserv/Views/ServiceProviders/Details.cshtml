@model Iserv.Models.ServiceProvider

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 style="color:white">Service Provider</h2>
<hr />

<div class="row" style="height:100%;">


    <div class="card " style="width:320px;height:auto;border:1px solid;border-radius:10px;padding:10px;background-color:rgba(0,0,0,0.88);margin-left:5px;margin-top:10px">
        <div class="card-body" >
            <h4 class="card-title" style="color:white"> Name: @Model.Name @Model.Surname   </h4>
            <p class="card-text"><strong> Service : @Model.Service.Name</strong></p>
            <p class="card-text"><strong> Address : @Model.Address.StreetNumber @Model.Address.StreetName</strong></p>
            <p class="card-text"><strong> City : @Model.Address.City.Name, @Model.Address.City.Province.Name</strong></p>

            <div class="btn-group">
                <button class="btn btn-info btn-sm" type="submit" onclick="window.location.href='@Url.Action("Edit", "ServiceProviders", new { id = Model.ServiceProvider_ID })'">Modify</button>
                <button class="btn btn-dark btn-sm" type="submit" onclick="window.location.href='@Url.Action("Index", "ServiceProviders")'">Back</button>
            </div>

        </div>
        <br />
    </div>

</div>

