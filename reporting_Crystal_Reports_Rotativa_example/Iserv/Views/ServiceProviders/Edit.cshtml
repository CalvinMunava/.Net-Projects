@model Iserv.Models.ServiceProvider

@{
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";
}




<h2 style="margin-left:20%; color:white">Update Your Details</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

 <div class="jumbotron" style="background-color:rgba(0,0,0,1);border-radius:20px;width:500px;margin-left:27%">
        <hr />

        <div class="form-horizontal" >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ServiceProvider_ID
       )

          <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label style="color:white" class="control-label">Surname</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @style = " border-radius:20px;" } })
                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="display:none">
                    <label style="color:white" class="control-label">Service</label>
                    <div class="col-md-10">
                        @Html.DropDownList("ServiceID", null, htmlAttributes: new { @class = "form-control", @style = " border-radius:20px;" })
                        @Html.ValidationMessageFor(model => model.Service.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Anything Added to edit-->
                <div class="form-group">
                    <label style="color:white" class="control-label">Business Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BusinessName, new { htmlAttributes = new { @class = "form-control", @style = " border-radius:20px;" } })
                        @Html.ValidationMessageFor(model => model.BusinessName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn" style="border-radius:20px; background-color:#38bbc4;color:white" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}


