@model Iserv.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
 
    <h2 style="margin-left:20%; color:white">Add Service Category</h2> 

@using (Html.BeginForm())  
{
    @Html.AntiForgeryToken()
    
<div class="jumbotron" style="background-color:rgba(0,0,0,0.85);border-radius:20px;width:500px;margin-left:27%">
    <hr />

    <div class="form-horizontal"    >
        <h4> @ViewBag.Date</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label style="color:white" class="control-label">Category Name:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "border-radius:20px" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label style="color:white" class="control-label">Category Description:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control",  @style = "border-radius:20px" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

       <!-- <div class="form-group">
            <label style="color:white" class="control-label">Please upload Image of the Service Category</label>
            <div class="col-md-10">
            <input style="border-radius:20px;background-color:cornflowerblue;color:white" class="form-control" type="file" id="Blob" name="Blob" required placeholder="choose Image" />
            </div>
        </div>
           -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Service Category" class="btn" style="border-radius:20px;background-color:darkcyan;color:white" />
            </div>
        </div>
    </div>
    </div>
    }

<div>
  <button class="btn btn-info button-sm" style=" border-radius:80px;margin-left:3%" onclick="window.location.href='@Url.Action("Index","Categories")'">

    <i style="color:white" class="fa fa-backward"> Back </i>

  </button>
</div>
