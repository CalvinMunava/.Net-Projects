@model TDO_DB_MVC.Models.Product

@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateProductinDb", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <button class="btn btn-primary btn-sm" onclick="window.history.go(-1)"> <i class="glyphicon glyphicon-backward"></i>Products</button>

    <!-- Use This hidden input field to hoLd the current products Imageblob and Path AND ID in the form -->
    <div class="form-group" style="display:none">
        <input id="prodID" name="prodID" value="@Model.ID" />
        <input id="prodCurrentBlob" name="prodCurrentBlob" value="@Model.ImageBlob" />
        <input id="prodCurrentPath" name="prodCurrentPath" value="@Model.ImagePath" />
    </div>


    <div style="background-color: rgba(0,0,0,0.84);border-radius: 10px;text-align: center;display: block; margin-left: auto; margin-right: auto;width:800px">

        <h2>Enter Product Details</h2>

        <div class="form-group" style="border-radius:20px">
            <img src="@Url.Content(Model.ImagePath)" style="width:70%;height:70%" />
        </div>

        <div class="form-group" style="border-radius:20px">
            <input value="@Model.Description" id="prodDesc" name="prodDesc" style="color:white;background-color:black;border-radius:20px" required />
        </div>

        <div class="form-group">
            <input value="@Model.Price" type="number" min="1.00" id="prodPrice" step="any" name="prodPrice" style="color: white; background-color: black; border-radius: 20px" required />
        </div>

        <div class="form-group">
            <input value="@Model.Quantity" type="number" min="1" id="prodQuantity" name="prodQuantity" style="color: white; background-color: black; border-radius: 20px" required>
        </div>

        @Html.DropDownList("ID", (IEnumerable<SelectListItem>)ViewBag.Types, Model.ProductTypeText, htmlAttributes: new {  @class = "btn dropdown-toggle;required", @style = "border-radius:20px;"})
        <br />
        <br />

        <div class="form-group">
            <input class="btn btn-info" type="file" id="prodBlob" name="prodBlob" style="color: white; background-color: black; border-radius: 20px;margin-left:270px" placeholder="Select Image" value="" />
        </div>


        <div>
            <button type="submit" class="btn btn-info btn-lg">Update </button>
        </div>
        <br />
        <br />
    </div>
}


